{
  "name": "megaman",
  "version": "0.0.1",
  "description": "A Mega Man clone used to learn Phaser.js",
  "author": "Rodrigo Silveira",
  "devDependencies": {
    "browserify-shim": "~3.8.6",
    "browserify": "~10.0.0",
    "gulp": "~3.8.11",
    "gulp-uglify": "~1.2.0",
    "vinyl-buffer": "~1.0.0",
    "vinyl-source-stream": "~1.1.0",
    "stream-combiner2": "~1.0.2",
    "gulp-sourcemaps": "~1.5.2",
    "gulp-util": "~3.0.4"
  },
  "browser": {
    "Phaser": "./bower_components/phaser/build/phaser.js"
